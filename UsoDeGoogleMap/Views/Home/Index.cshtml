@{
    ViewBag.Title = "Tu ubicación actual";
}

<div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
<div class="demo-content mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
    <div class="demo-crumbs mdl-color-text--grey-500">
        Google &gt; Maps &gt; Ubicación actual
        <input type="text" id="latitud" name="lat">
        <input type="text" id="longitud" name="lng">
    </div>
    <div class="row">
        <div id="content-map"  class="col s12 m12 l12">            
            <div id="map-canvas"></div>
            @*<input type="hidden" id="latitud" name="lat">
            <input type="hidden" id="longitud" name="lng">*@
        </div>
    </div>
</div>

@section scripts{
    @*<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=drawing,places"></script>*@
    <script src="http://maps.google.com/maps/api/js?v=3.exp&sensor="></script>
    <script src="~/Scripts/maplib.js"></script>
    <script>
        var map;
        var name_canvas;
        var map_canvas;
        $(function () {

            setCanvasMap('map-canvas');
            setLatLng('latitud', 'longitud');
            initMap(getGeoLocation, getGoogleMap);
            $(window).resize(function () {
                resizeBootstrapMap('content-map');
            });
            $(window).trigger('resize');

        });
    </script>
}